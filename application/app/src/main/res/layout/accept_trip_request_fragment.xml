<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_estimated_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:gravity="center"
        android:text="$xx.xx"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Estimated Trip Cost"
        android:paddingBottom="16dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAT: "
                    android:paddingTop="8dp"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LNG: "
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fragment_startLat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="LAT"
                    android:gravity="center"
                    android:textSize="28sp" />
                <TextView
                    android:id="@+id/fragment_startLong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="LNG"
                    android:gravity="center"
                    android:textSize="28sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAT: "
                    android:paddingTop="8dp"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LNG: "
                    android:textSize="24sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_endLat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="LAT"
                    android:textSize="28sp" />


                <TextView
                    android:id="@+id/fragment_endLong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="LNG"
                    android:textSize="28sp" />
            </LinearLayout>
            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START LOCATION"
            android:paddingRight="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="END LOCATION"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_riderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RiderName"
        android:gravity="center"
        android:textSize="42sp"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_distance"
        android:text="distance"
        android:gravity="center"
        android:textSize="32dp"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"/>



</LinearLayout>